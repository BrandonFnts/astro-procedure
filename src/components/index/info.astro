---
// src/components/ProjectDocumentation.astro
import { Icon } from "astro-icon/components";
---

<div class="max-w-4xl mx-auto px-4 py-8 space-y-8">
    <!-- Hero Section -->
    <section class="text-center mb-12">
        <h1 class="text-4xl font-bold text-orange-600 mb-4">
            <Icon
                name="heroicons-solid:database"
                class="inline-block w-12 h-12 mr-2"
            />
            Administrador de bases de datos
        </h1>
        <p class="text-xl text-gray-600">
            Herramienta integral para gestión segura de bases de datos SQL
        </p>
    </section>

    <!-- Core Features -->
    <section class="space-y-6">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4 flex items-center">
            <Icon
                name="heroicons-solid:chip"
                class="w-6 h-6 mr-2 text-green-500"
            />
            Funcionalidades Principales
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Security Card -->
            <div
                class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-blue-200"
            >
                <h3 class="text-lg font-semibold mb-2 text-blue-600">
                    <Icon
                        name="heroicons-solid:shield-check"
                        class="inline-block w-5 h-5 mr-1"
                    />
                    Gestión de Seguridad
                </h3>
                <ul
                    class="list-disc pl-5 space-y-2 text-gray-600 dark:text-gray-300"
                >
                    <li>Creación automatizada de logins y usuarios</li>
                    <li>Asignación granular de permisos</li>
                    <li>Administración de roles personalizados</li>
                    <li>Registro detallado de auditoría</li>
                </ul>
            </div>

            <!-- Automation Card -->
            <div
                class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-green-200"
            >
                <h3 class="text-lg font-semibold mb-2 text-green-600">
                    <Icon
                        name="heroicons-solid:clock"
                        class="inline-block w-5 h-5 mr-1"
                    />
                    Automatización
                </h3>
                <ul
                    class="list-disc pl-5 space-y-2 text-gray-600 dark:text-gray-300"
                >
                    <li>Ejecución segura de stored procedures</li>
                    <li>Validación de políticas de contraseñas</li>
                    <li>Manejo transaccional de operaciones</li>
                    <li>Generación de reportes automatizados</li>
                </ul>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Backup Section -->
            <div
                class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-purple-200"
            >
                <h3 class="text-lg font-semibold mb-2 text-purple-600">
                    <Icon
                        name="heroicons-solid:archive"
                        class="inline-block w-5 h-5 mr-1"
                    />
                    Sistema de Backups
                </h3>
                <div class="space-y-2 text-gray-600 dark:text-gray-300">
                    <p class="flex items-center">
                        <span
                            class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm mr-2"
                            >v2.0</span
                        >
                        Programación de backups automatizados
                    </p>
                    <ul class="list-disc pl-5">
                        <li>Compresión AES-256</li>
                        <li>Almacenamiento en múltiples destinos</li>
                        <li>Verificación de integridad</li>
                        <li>Retención configurable</li>
                    </ul>
                </div>
            </div>

            <!-- DB Creation Section -->
            <div
                class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-orange-200"
            >
                <h3 class="text-lg font-semibold mb-2 text-orange-600">
                    <Icon
                        name="heroicons-solid:document-add"
                        class="inline-block w-5 h-5 mr-1"
                    />
                    Creación de Bases de Datos
                </h3>
                <div class="space-y-2 text-gray-600 dark:text-gray-300">
                    <div class="mb-2">
                        <span
                            class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm mr-2"
                            >SQL Server</span
                        >
                        <span
                            class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-sm"
                            >Filegroups</span
                        >
                    </div>
                    <pre
                        class="bg-gray-100 dark:bg-gray-700 p-3 rounded text-sm">
CREATE DATABASE [ClientDB]
ON PRIMARY (
  NAME = 'ClientDB_Data',
  FILENAME = '/var/opt/mssql/data/ClientDB.mdf',
  SIZE = 512MB,
  FILEGROWTH = 256MB
)
LOG ON (
  NAME = 'ClientDB_Log',
  FILENAME = '/var/opt/mssql/log/ClientDB.ldf',
  SIZE = 256MB,
  FILEGROWTH = 128MB
)</pre>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <div class="text-center mt-12">
        <a
            href="/documentation"
            class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors"
        >
            Ver Documentación Técnica Completa
        </a>
    </div>
</div>
